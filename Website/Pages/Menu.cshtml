<hr />

<h1>Menu</h1>

<h2>Combos</h2>
@foreach (DinoDiner.Menu.CretaceousCombo combo in Model.Menu.AvailableCombos)
{
    <div class="menu-item">
        <p>Name: @combo</p>
        <p>Price: @combo.Price</p>
        <p>Calories: @combo.Calories</p>
        <p>Ingredients:</p>
        @foreach (String item in combo.Ingredients)
        {
            <div class="ingredients">
                <p>@item</p>
            </div>
        }
    </div>
}

