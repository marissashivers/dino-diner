@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<hr />
<nav style="display: flex;">
    <a class="nav-link" style="flex-grow:1; text-align:center;" href="/Index">Home</a>
    <a class="nav-link" style="flex-grow:1; text-align:center;" href="/About">About</a>
